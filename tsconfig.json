{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "strict": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@styled/*": ["src/components/styled/*"],
      "@assets/*": ["src/assets/*"]
    },
  },
  "exclude": ["node_modules"]
}
